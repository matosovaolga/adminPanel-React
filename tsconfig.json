{
	"compilerOptions": {
		"target": "es2016",
		"lib": [
			"dom",
			"DOM.Iterable",
			"ESNext"
		],
		"jsx": "preserve",
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"allowJs": false,
		"declaration": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"strictPropertyInitialization": false,
		"skipLibCheck": true,
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"types"
	],
	"exclude": [
		"node_modules"
	]
}